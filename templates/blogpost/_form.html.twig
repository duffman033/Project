{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
        {{ form_help(form.title) }}
    </div>
     <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content) }}
        {{ form_errors(form.content) }}
        {{ form_help(form.content) }}
     </div>
    <div class="form-group">
        {{ form_label(form.images) }}
        {{ form_widget(form.images) }}
        {{ form_errors(form.images) }}
        {{ form_help(form.images) }}
    </div>
    <div class="form-group">
        {{ form_label(form.Status) }}
        {{ form_widget(form.Status) }}
        {{ form_errors(form.Status) }}
        {{ form_help(form.Status) }}
    </div>
    {{ form_widget(form.category) }}
	{% if app.request.attributes.get('_route') == 'blogpost_edit' %}
        <h2>Images</h2>
        {% for image in blogpost.images %}
            <div>
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">


                <a href="{{ path('blogpost_delete_image', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
<button type="submit" class="btn btn-lg btn-primary btn-block">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
