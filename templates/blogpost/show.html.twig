{% extends 'base.html.twig' %}

{% block title %}{{ blogpost.title }}{% endblock %}

{% block body %}
    <header class="masthead">
        <div class="intro-body">
            <div class="container col-12 d-flex flex-column align-items-center">
                <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 60vw;">
                    {% for image in blogpost.images %}
                        {% for image in blogpost.images %}
                            <img style="width: 50vw" src="{{ asset('/uploads/'~image.name) }}" alt="{{ blogpost.title }}">
                        {% endfor %}
                    {% endfor %}
                    <div class="card-body">
                        <br>
                        <p class="text">{{ blogpost.content }}</p>
                        <p class="text">{{ blogpost.createdAt ? blogpost.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                        <p class="text">Cat√©gorie {{ blogpost.category}}</p>
                        <a href="{{ path('blogpost_blog') }}"><i class="ri-arrow-left-line"></i>Retourner au blog</a>
                        <br>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-info" href="{{ path('blogpost_edit', {'id': blogpost.id}) }}">edit</a>
                            {{ include('blogpost/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
