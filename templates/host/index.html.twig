{% extends 'base.html.twig' %}

{% block title %}Trouvez votre location{% endblock %}

{% block body %}
    <h1>accueil</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nom de l'hôte</th>
                <th>Région</th>
            </tr>
        </thead>
        <tbody>
        {% for host in hosts %}
            <tr>
                <td>{{ host.id }}</td>
                <td>{{ host.title }}</td>
                <td>{{ host.user.lastname }}</td>
                <td>{{ host.region }}</td>
                <td>
                    <a href="{{ path('host_show', {'id': host.id}) }}">Voir</a>
                    <a href="{{ path('host_edit', {'id': host.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">aucune recherche trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('host_new') }}">Créer une publication</a>
{% endblock %}
