{% extends 'base.html.twig' %}

{% block title %}Faq{% endblock %}

{% block body %}
    <h1>Faq</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faq.id }}</td>
            </tr>
            <tr>
                <th>Rédiger la question</th>
                <td>{{ faq.question }}</td>
            </tr>
            <tr>
                <th>Ecrire le contenu de la réponse</th>
                <td>{{ faq.answer }}</td>
            </tr>
        </tbody>
    </table>
 
    <a href="{{ path('faq_index') }}">Retour</a>

    <a class="btn btn-info" href="{{ path('faq_edit', {'id': faq.id}) }}">Editer</a>

    {{ include('faq/_delete_form.html.twig') }}
{% endblock %}
