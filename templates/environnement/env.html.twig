{% extends 'base.html.twig' %}

{% block title %}Environnement{% endblock %}

{% block body %}
    <main role="main">
        <div class="jumbotron env_img text-center">
            <div class="container">
            </div>
        </div>
        <div class="album">
            <div class="container">
                <h3>Les lieux à visiter</h3>
                <br>
                <p>Voici une liste de tout les lieux à visiter</p>
                <div class="row">
                    {% for environnement in environnements %}
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                {% for image in environnement.images %}
                                    {% for image in environnement.images %}
                                        <div>
                                            <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="100%">
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                                <div class="card-body">
                                    <p class="card-text">{{ environnement.title }}</p>
                                    <hr>
                                    <p class="card-text">{{ environnement.description | slice(0, 350)}}...</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-info" href="{{ path('environnement_show', {'id': environnement.id}) }}">Voir</a>
                                        </div>
                                        <small class="text-muted">{{ environnement.region }} / Thème {{ environnement.theme }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </main>
{% endblock %}
