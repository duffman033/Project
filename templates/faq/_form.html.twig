{{ form_start(form, {attr: {novalidate:"novalidate"}}) }}
    
<div class="container mt-5">
    <div class="form-group">
        {{ form_label(form.question) }}
        {{ form_widget(form.question) }}
        {{ form_errors(form.question) }}
        {{ form_help(form.question) }}  
    </div>


    <div class="form-group">
        {{ form_label(form.answer) }}
        {{ form_widget(form.answer) }}
        {{ form_errors(form.answer) }}
        {{ form_help(form.answer) }}  
    </div>

    <div class="form-group">
        {{ form_label(form.Category) }}
        {{ form_widget(form.Category) }}
        {{ form_errors(form.Category) }}
        {{ form_help(form.Category) }}  
    </div>

    <button class="btn btn-info btn-md">{{ button_label|default('Ajouter un post') }}</button> 
</div>
{{ form_end(form) }}
