{% extends 'base.html.twig' %}

{% block title %}{% trans into 'fr_FR'%}S'inscrire {% endtrans %} {% endblock %}

{% block body %}
<div class="row d-flex justify-content-center align-items-center" style="padding-top : 95px;">
<div class="container mt-5">
    <div class="row g-2">
        <div class= "col-md offset-md mt-2">

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <h3 class= "form_registration">Créez votre compte</h3>

    {{ form_start(registrationForm, {
        attr: {
            novalidate: "novalidate"
        }}
        ) }}
        

            <div class="form-group">
                {{form_label(registrationForm.firstname)}}
                {{form_widget(registrationForm.firstname)}}
                {{form_help(registrationForm.firstname)}}
                {{form_errors(registrationForm.firstname)}}
            </div>
            <div class="form-group">
                {{form_label(registrationForm.lastname)}}
                {{form_widget(registrationForm.lastname)}}
                {{form_help(registrationForm.lastname)}}
                {{form_errors(registrationForm.lastname)}}
            </div>
             <div class="form-group">
        {{form_label(registrationForm.birthdate)}}

		 <div class="row">
		<div class="col-4">
        {{form_widget(registrationForm.birthdate.day)}}
		</div>
		<div class="col-4">
        {{form_widget(registrationForm.birthdate.month)}}
		</div>
		<div class="col-4">
        {{form_widget(registrationForm.birthdate.year)}}
		</div>
        {{form_help(registrationForm.birthdate)}}
        {{form_errors(registrationForm.birthdate)}}
      </div>
	  </div>
</div>


<div class= "col-md offset-md mt-5">
           <div class="form-group">
        {{form_label(registrationForm.email)}}
        {{form_widget(registrationForm.email)}}
        {{form_help(registrationForm.email)}}
        {{form_errors(registrationForm.email)}}
      </div>

             <div class="form-group">
        {{form_label(registrationForm.plainPassword.first)}}
        {{form_widget(registrationForm.plainPassword.first)}}
        {{form_help(registrationForm.plainPassword.first)}}
        {{form_errors(registrationForm.plainPassword.first)}}
     
        {{form_label(registrationForm.plainPassword.second)}}
        {{form_widget(registrationForm.plainPassword.second)}}
        {{form_help(registrationForm.plainPassword.second)}}
        {{form_errors(registrationForm.plainPassword.second)}}
      </div>

               <div class="form-group">
        {{form_label(registrationForm.agreeTerms)}}
        {{form_widget(registrationForm.agreeTerms)}}
        {{form_help(registrationForm.agreeTerms)}}
        {{form_errors(registrationForm.agreeTerms)}}
      </div>
       
        <button type="submit" class="btn btn-primary">S'inscrire</button>
         {{ form_end(registrationForm) }} 

        
        {# Redirection vers la page de connexion de compte #}
         <a href="{{ path('app_login') }}">Connectez-vous à votre compte</a>

				</div>
            </div>
         </div>
		 </div>
       
{% endblock %}
